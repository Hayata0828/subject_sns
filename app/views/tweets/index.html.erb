<h3 style="text-align: center">Tweet Index</h3>

<table style="margin: 0 auto;">
  <thead>
    <tr>
      <th style="text-align: center; padding: 5px 10px; width: 10%">Category</th>
      <th style="padding: 5px 10px; width: 60%">Tweets</th>
      <th style="text-align: center; padding: 5px 10px; width: 15%">Nickname</th>

    </tr>
  </thead>

  <tbody>
  <%# binding.pry %>
    <% @tweets.each do |tweet| %>
      <tr>
        <td style="text-align: center; padding: 30px 10px; width: 10%"><%= tweet.category %></td>
        <td style="padding: 5px 10px; width: 60%"><%= tweet.content %></td>
        <td style="text-align: center; padding: 5px 10px; width: 15%"><%= tweet.user.nickname %></td>
        <% if tweet.user_id == current_user.id %>
          <td style="text-align: center; padding: 5px 5px; width: 5%"><%= link_to("編集",tweet_edit_path(tweet.id)) %></td>
          <td style="text-align: center; padding: 5px 5px; width: 5%"><%= link_to("削除","/tweet/#{tweet.id}/destroy", method: :delete) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>